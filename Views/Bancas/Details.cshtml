@model SistemaDeControleDeTCCs.Models.Banca

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Banca</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeCadastro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeCadastro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tcc.Tema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tcc.Tema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tcc.Resumo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tcc.Resumo)
        </dd>
        <dt class="col-sm-2">
            Aluno:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tcc.Usuario.Nome) @Html.DisplayFor(model => model.Tcc.Usuario.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tcc.Nota)
        </dd>
        <dt class="col-sm-2">
            Membros banca
        </dt>
        <dd>
            <form method="post">
                <table border="0" cellspacing="10" cellpadding="10">
                    <tbody>
                        @if (ViewBag.menbrosBanca != null)
                        {
                            if (ViewBag.menbrosBanca.Count > 0)
                            {
                                int count = 0;

                                @foreach (var item in ViewBag.menbrosBanca as List<Banca>)
                                {
                                    count++;
                                    <tr>
                                        <td> <input value="@item.Nota" class="form-control" name="Nota_@count" id="Nota_@count" /></td>
                                        <td> @item.Usuario.Nome @item.Usuario.Sobrenome</td>
                                        <td> @item.TipoUsuario.DescTipo</td>
                                        <td>
                                            @if (item.TipoUsuario.TipoUsuarioId != 7)
                                            {<a asp-action="Delete" asp-route-id="@item.BancaId">Delete</a>}
                                        </td>
                                    </tr>

                                }

                            }
                        }
                        <tr>
                            <td><button type="submit" class="btn btn-default">Salvar</button></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.BancaId">Edit</a> |*@
    <a asp-action="Index">Voltar para lista</a>
</div>
