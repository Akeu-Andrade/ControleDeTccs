@model IEnumerable<SistemaDeControleDeTCCs.Models.FileTCC>

@{
    ViewData["Title"] = "Arquivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <form asp-action="SaveFile" method="post" enctype="multipart/form-data">
            <input type="hidden" value="@ViewBag.TccId" name="TccId" id="TccId" />
            <div class="form-group">
                @if (User.IsInRole("Aluno"))
                {
                    <label>Arquivo(pdf)</label><br>
                    <input type="file" name="arquivos" id="arquivos" accept="application/pdf">
                }
            </div>
            <div class="form-group">
                @if (User.IsInRole("Aluno"))
                {
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Data/Hora Cadastro
                </th>
                <th>
                    Nome Arquivo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Download" asp-controller="FileTCCs" asp-route-id="@item.Id">Download</a>
                        @if (User.IsInRole("Aluno"))
                        {
                            <text>|</text> <a asp-action="Delete" asp-controller="FileTCCs" asp-route-id="@item.Id">Excluir</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}